@model IEnumerable<PraLoup.WebApp.Models.EventModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            StartDateTime
        </th>
        <th>
            EndDateTime
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
    </tr>

@foreach (var item in Model) {
    if (!item.Permissions.HasFlag(PraLoup.BusinessLogic.Permissions.View))
    {
        continue;
    }
    <tr>
        <td>
        @if(item.Permissions.HasFlag(PraLoup.BusinessLogic.Permissions.Edit)){
            @Html.ActionLink("Edit", "Edit", new { id=item.Event.EventId })
        }
        @Html.ActionLink("Details", "Details", new { id = item.Event.EventId }) 
        @if (item.Permissions.HasFlag(PraLoup.BusinessLogic.Permissions.Delete))
        {
            @Html.ActionLink("Delete", "Delete", new { id = item.Event.EventId })
        }
        </td>
        <td>
            @String.Format("{0:g}", item.Event.StartDateTime)
        </td>
        <td>
            @String.Format("{0:g}", item.Event.EndDateTime)
        </td>
        <td>
            @item.Event.Name
        </td>
        <td>
            @item.Event.Description
        </td>
        <td>
            @String.Format("{0:F}", item.Event.Price)
        </td>
    </tr>
}

</table>

