@model PraLoup.WebApp.Models.ActivityCreationModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Activity</legend>
        @Html.HiddenFor(model => model.Event.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Activity.Privacy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activity.Privacy, "privacy", "privacy")
            @Html.ValidationMessageFor(model => model.Activity.Privacy)            
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Event)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Event)
            @Html.ValidationMessageFor(model => model.Event)
        </div>
          <div class="editor-label">
            @Html.LabelFor(model => model.Invited)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Invited)
            @Html.ValidationMessageFor(model => model.Invited)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
