@model PraLoup.WebApp.Models.ActivityDiscoveryModel
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.MyActivity != null && Model.MyActivity.Count() > 0)
{ 
    <table>
        <tr>            
            <th>
                Activity that I Organize
            </th>
        </tr>
        @foreach (var item in Model.MyActivity)
        {    
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @item.Event.Name
                </td>
            </tr>
        }
    </table>
}
@if (Model.MyOtherActivity != null && Model.MyOtherActivity.Count() > 0)
{ 
    <table>
        <tr>            
            <th>
                My Other Activities
            </th>
        </tr>
        @foreach (var item in Model.MyOtherActivity)
        {    
            <tr>
                <td>
                    @if (item.CanEdit)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Activity.Id }) 
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Activity.Id }) |
                    @if (item.CanDelete)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Activity.Id })
                    }
                </td>
                <td>
                    @item.Activity.Event.Name
                </td>
            </tr>
        }
    </table>
}