@using PraLoup.WebApp.Utilities
@model PraLoup.WebApp.Areas.Admin.Models.PromoCreateModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{    
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(model => model.BusinessId)

        <legend>Promotion</legend>
        
        <div class="sectionHeader">
            @Html.RequiredLabelFor(model => model.Promotion.Event)
        </div>
        <div class="sectionBody">
            @Html.EditorFor(model => model.Promotion.Event)
        </div>

        <div class="sectionHeader">
            @Html.RequiredLabelFor(model => model.Promotion.Deals)
        </div>
        <div class="sectionBody">
            @Html.Partial("DealList2", Model.Promotion.Deals, new ViewDataDictionary() { {"Name", "deal" }})
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
