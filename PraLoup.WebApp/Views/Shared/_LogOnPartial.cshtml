<div id="fb-root">
</div>
<script src="@Url.Content("~/Scripts/jquery/jquerytimer.js")" type="text/javascript"></script>
<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '119592781389488',
            status: true, // check login status            
            cookie: true, // enable cookies to allow the server to access the session    
            xfbml: true  // parse XFBML        
        });
        
    };
(function () {
    var e = document.createElement('script'); e.async = true;
    e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
    document.getElementById('fb-root').appendChild(e);
}
());

var login = false;

jQuery.fjTimer({
    interval: 100,
    repeat: true,
    tick: function (counter, timerId) {
        FB.getLoginStatus(function (response) {
            if (!login) {
                if (response.session) {
                    EnableForm();
                    login = true;
                    loginp(response.session.uid, response.session.access_token);
                }
                else {
                    DisableForm();
                }
            }
        });
    }
});
 </script>
<script src="http://connect.facebook.net/en_US/all.js#appId=119592781389488&amp;xfbml=1">
</script>

