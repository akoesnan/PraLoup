@model IList<PraLoup.WebApp.Models.Entities.Business >
@using PraLoup.WebApp.Utilities;
@using PraLoup.DataAccess.Entities;

@{
     ViewBag.Title = "Create"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
 
    foreach (PraLoup.WebApp.Models.Entities.Business b in Model)
    {
        <div>
        @Html.DisplayFor(t => b);
        </div>
        <div>
            @Html.ActionLink("Edit", "Business", "Edit", new {id = b.Id}) 
            | @Html.ActionLink("Add Business Users", "Business", "Edit", new {id = b.Id}) 
            | @Html.ActionLink("Create Promotion", "Business", "Edit", new {id = b.Id}) 
            | @Html.ActionLink("View Promotions", "Business", "Edit", new {id = b.Id}) 
        </div>
    }
}
