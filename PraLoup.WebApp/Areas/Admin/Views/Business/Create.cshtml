@using PraLoup.WebApp.Utilities
@model PraLoup.WebApp.Areas.Admin.Models.BusinessModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Business</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Business.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Business.Name)
            @Html.ValidationMessageFor(model => model.Business.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Business.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Business.Phone)
            @Html.ValidationMessageFor(model => model.Business.Phone)
        </div>

        @Html.Partial("~/Views/Shared/CreateAddress.cshtml", Model.Business.Address);

        <div class="editor-label">
            @Html.LabelFor(model => model.Business.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Business.Url)
            @Html.ValidationMessageFor(model => model.Business.Url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Business.TwitterId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Business.TwitterId)
            @Html.ValidationMessageFor(model => model.Business.TwitterId)
        </div>        

        <div class="editor-label">
            @Html.LabelFor(model => model.Role)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Role, Model.Role.ToSelectList())
            @Html.ValidationMessageFor(model => model.Role)
        </div>        

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
