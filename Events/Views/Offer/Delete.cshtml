@model PraLoup.DataAccess.Entities.Offer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Offer</legend>

    <div class="display-label">OriginalValue</div>
    <div class="display-field">@String.Format("{0:F}", Model.OriginalValue)</div>

    <div class="display-label">Saving</div>
    <div class="display-field">@String.Format("{0:F}", Model.Saving)</div>

    <div class="display-label">CurrentValue</div>
    <div class="display-field">@String.Format("{0:F}", Model.CurrentValue)</div>

    <div class="display-label">StartDateTime</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDateTime)</div>

    <div class="display-label">EndDateTime</div>
    <div class="display-field">@String.Format("{0:g}", Model.EndDateTime)</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">FinePrint</div>
    <div class="display-field">@Model.FinePrint</div>

    <div class="display-label">Available</div>
    <div class="display-field">@Model.Available</div>

    <div class="display-label">Bought</div>
    <div class="display-field">@Model.Bought</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


